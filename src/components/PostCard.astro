---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "./ui/card";

interface Props {
  id: string;
  title: string;
  description: string;
  pubDate: Date;
  cover?: string;
}

const { id, title, description, pubDate, cover } = Astro.props;
---

<Card>
  {
    cover && (
      <CardContent>
        <img
          transition:name={`${id} image`}
          class="rounded-lg"
          src={cover}
          alt={title}
        />
      </CardContent>
    )
  }
  <CardHeader>
    <CardTitle transition:name={`${id} title`}>{title}</CardTitle>
    <CardDescription>{description}</CardDescription>
  </CardHeader>
</Card>
